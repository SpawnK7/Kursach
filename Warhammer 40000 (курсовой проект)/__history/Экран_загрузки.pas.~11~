{$R *.dfm}

uses √лавна€;

procedure TLoad_Form.FormActivate(Sender: TObject);
begin
MediaPlayer1.Notify:=true;
MediaPlayer1.Open; //ќткрытие плеера
MediaPlayer1.DisplayRect:=Panel1.ClientRect;
MediaPlayer1.Play;
end;



procedure TLoad_Form.FormClose(Sender: TObject; var Action: TCloseAction);
begin
Main_Form.Show;
end;

end.
